<%# <h1>Trucks#show</h1> %>
<h1><%= @truck.name %> Show Page</h1>

<%# list food items %>

<% if !current_user.admin %>
    <%= form_tag '/food', method: :post do %>
        <%= hidden_field_tag :truck_id, @truck.id %>
        <%= submit_tag "Purchase item" %>
    <% end %>
<% end %>


<% if current_user.admin %>
    <%= link_to "Edit Truck", edit_truck_path(@truck) %>
<% end %>   
